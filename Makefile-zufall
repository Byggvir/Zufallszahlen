CC = g++
OPT=-march=x86-64

#
# Erstes Programm
#

PGM = zufallszahl
OBJS = zufallszahl.o
$(PGM) : $(OBJS)
	$(CC) -o $(PGM) $(OBJS) -I/usr/lib -I/home/thomas/bin/cc/Zufallszahlen -L/usr/include/g++ $(OPT)
$(OBJS) : $(PGM).c++
	$(CC) -c $(PGM).c++ $(OPT) -I/home/thomas/bin/cc/Zufallszahl

.PHONY : clean
.PHONY : install
clean :
	rm *.o
install :
	cp zufallszahl /home/thomas/bin/zufallszahl
